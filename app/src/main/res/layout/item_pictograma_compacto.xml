<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_pictograma_compacto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/categoria_default"
    app:cardBackgroundColor="@color/categoria_default_light">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Icono pequeño -->
        <ImageView
            android:id="@+id/iv_icono_compacto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/icono_pictograma"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_person" />

        <!-- Texto -->
        <TextView
            android:id="@+id/tv_texto_compacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:text="@string/pictograma"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Yo" />

        <!-- Botón eliminar (X) -->
        <ImageButton
            android:id="@+id/btn_eliminar_compacto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/eliminar_pictograma"
            android:scaleType="fitCenter" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
