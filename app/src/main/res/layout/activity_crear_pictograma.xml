<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/crear_pictograma"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Campo de texto -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/texto_pictograma"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Selector de categoría -->
            <TextView
                android:id="@+id/tv_label_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/seleccionar_categoria"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/til_texto"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/seleccionar_categoria"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:layout_constraintTop_toBottomOf="@id/tv_label_categoria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Selector de icono -->
            <TextView
                android:id="@+id/tv_label_icono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/seleccionar_icono"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/btn_categoria"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Vista previa del icono seleccionado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vista_previa"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_label_icono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_vista_previa"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_image"
                    android:contentDescription="@string/icono_pictograma" />
            </androidx.cardview.widget.CardView>

            <!-- Botones para seleccionar icono -->
            <LinearLayout
                android:id="@+id/layout_botones_icono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/card_vista_previa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_seleccionar_icono"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/seleccionar_icono"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_image"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_usar_camara"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/usar_camara"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_camera"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>

            <!-- Botón crear -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_crear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/agregar_pictograma"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/layout_botones_icono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
